---
import Container from '../shared/Container.astro'
import Paragraph from '../shared/Paragraph.astro'

const footerNav1 = [
  {
    itemText: 'Inicio',
    itemLink: '#',
  },
  {
    itemText: 'Servicios',
    itemLink: '#services',
  },
  {
    itemText: 'Nosotros',
    itemLink: '#about-us',
  },
]
---

<div class='mt-16'></div>
<footer class='relative bg-ter dark:from-gray-900 pt-8 md:pt-28'>
  <Container className='pb-8 relative overflow-auto'>
    <div
      class='flex flex-col md:flex-row items-center justify-center md:justify-between relative'>
      <div class='h-auto flex flex-col md:basis-1/2'>
        <div class='h-full'>
          <a
            href='#'
            class='relative flex items-center gap-3'>
            <div class='relative overflow-hidden'>
              <img
                src='/logo/logo.png'
                alt='Baumotiv'
                class='object-cover w-[10rem]'
              />
            </div>
          </a>
         <ul class="mt-8 flex flex-col gap-2">
          <li class="flex items-center gap-2 text-[#909395]">
            <svg xmlns="http://www.w3.org/2000/svg" width="1.5em" height="1.5em" viewBox="0 0 16 16"><g fill="#ED2B3C"><path d="M11 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM5 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/><path d="M8 14a1 1 0 1 0 0-2a1 1 0 0 0 0 2"/></g></svg>
            <span>Teléfono: </span>011-2856-7186</li>
          <li class="flex items-center gap-2 text-[#909395]">
